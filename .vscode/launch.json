{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "mocha tests",
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "program": "${workspaceRoot}/functions/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--compilers",
                "ts:ts-node/register",
                "--no-timeouts",
                "${workspaceFolder}/functions/src/unit-test/user-register-update.ts"
            ],
            "cwd": "${workspaceRoot}",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnFirstSessionStart"
        },
        {
            "name": "Debug Function",
            "type": "node",
            "request": "attach",
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/functions/src/modules/document/document.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}